<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_color"
    android:layout_marginBottom="70dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/f4_userMsgSetting"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="16"
            android:gravity="center_vertical"
            android:background="#fff"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/f4_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/f4_userIntr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:singleLine="true" />
            </LinearLayout>
            <ImageView
                android:id="@+id/f4_userHead"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/head"
                />
            <ImageButton
                android:id="@+id/f4_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/inter"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_color"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
        <LinearLayout
            android:id="@+id/f4_friend"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            >
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center"
                >
                <RadioButton
                    android:id="@+id/f4_love"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="超赞"
                    android:gravity="center_horizontal"
                    />
                <RadioButton
                    android:id="@+id/f4_rb_myAtten"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="关注数"
                    android:gravity="center_horizontal"
                    />
                <RadioButton
                    android:id="@+id/f4_rb_attenMe"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="粉丝数"
                    android:gravity="center_horizontal"
                    />
            </RadioGroup>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/f4_userState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</ScrollView>
