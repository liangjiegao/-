<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/mybuy_goods_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="15dp"
            android:background="@mipmap/ic_launcher"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            >
            <TextView
                android:id="@+id/mybuy_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="达尔优机械键盘"
                android:textSize="14sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/mybuy_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$70"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/mybuy_goods_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易成功"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="#262424"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="16"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:background="@mipmap/ic_launcher"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:text="联系卖家"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="25dp"
            android:background="@drawable/user_msg_editbt"
            android:text="评价"
            android:textSize="14sp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/user_msg_editbt"
            />
    </LinearLayout>
</LinearLayout>
